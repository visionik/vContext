{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vcontext.dev/schemas/vcontext-extension-playbooks.schema.json",
  "title": "vContext Extension Schema: Playbooks",
  "description": "JSON Schema for vContext Playbooks types (v0.4).",
  "type": "object",
  "additionalProperties": true,
  "$defs": {
    "Playbook": {
      "type": "object",
      "required": ["version", "created", "updated", "items"],
      "properties": {
        "version": {"type": "integer", "minimum": 0},
        "created": {"$ref": "./vcontext-core.schema.json#/$defs/dateTime"},
        "updated": {"$ref": "./vcontext-core.schema.json#/$defs/dateTime"},
        "items": {
          "type": "array",
          "items": {"$ref": "#/$defs/PlaybookItem"}
        },
        "metrics": {"$ref": "#/$defs/PlaybookMetrics"}
      },
      "additionalProperties": true
    },
    "PlaybookItem": {
      "type": "object",
      "required": ["eventId", "targetId", "operation", "createdAt"],
      "properties": {
        "eventId": {"type": "string", "minLength": 1},
        "targetId": {"type": "string", "minLength": 1},
        "operation": {"enum": ["initial", "append", "update", "deprecate"]},
        "prevEventId": {"type": "string", "minLength": 1},

        "kind": {"enum": ["strategy", "learning", "rule", "warning", "note"]},
        "title": {"type": "string"},
        "narrative": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {"type": "string"}
        },
        "tags": {"type": "array", "items": {"type": "string"}},
        "evidence": {"type": "array", "items": {"type": "string"}},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},

        "delta": {
          "type": "object",
          "properties": {
            "helpfulCount": {"type": "integer"},
            "harmfulCount": {"type": "integer"}
          },
          "additionalProperties": false
        },

        "feedbackType": {"enum": ["humanReview", "executionOutcome", "selfReport", "unknown"]},
        "createdAt": {"$ref": "./vcontext-core.schema.json#/$defs/dateTime"},

        "status": {"enum": ["active", "deprecated", "quarantined"]},
        "deprecatedReason": {"type": "string"},
        "supersedes": {"type": "array", "items": {"type": "string"}},
        "supersededBy": {"type": "string"},
        "duplicateOf": {"type": "string"},
        "reason": {"type": "string"},
        "metadata": {"type": "object"}
      },
      "additionalProperties": true,
      "allOf": [
        {
          "if": {"properties": {"operation": {"enum": ["append", "initial"]}}},
          "then": {"required": ["kind", "narrative"]}
        },
        {
          "if": {"properties": {"operation": {"enum": ["update", "deprecate"]}}},
          "then": {"required": ["prevEventId"]}
        }
      ]
    },
    "PlaybookMetrics": {
      "type": "object",
      "required": ["totalEntries"],
      "properties": {
        "totalEntries": {"type": "integer", "minimum": 0},
        "averageConfidence": {"type": "number", "minimum": 0, "maximum": 1},
        "lastUpdated": {"$ref": "./vcontext-core.schema.json#/$defs/dateTime"}
      },
      "additionalProperties": true
    }
  }
}
