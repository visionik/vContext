{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vagenda.dev/schemas/vagenda-extension-playbooks.schema.json",
  "title": "vAgenda Extension Schema: Playbooks",
  "description": "JSON Schema for vAgenda Playbooks extension types (v0.2 extension).",
  "type": "object",
  "additionalProperties": true,
  "$defs": {
    "Playbook": {
      "type": "object",
      "required": ["version", "created", "updated", "entries"],
      "properties": {
        "version": {"type": "integer", "minimum": 0},
        "created": {"$ref": "./vagenda-core.schema.json#/$defs/dateTime"},
        "updated": {"$ref": "./vagenda-core.schema.json#/$defs/dateTime"},
        "entries": {
          "type": "array",
          "items": {"$ref": "#/$defs/PlaybookEntry"}
        },
        "metrics": {"$ref": "#/$defs/PlaybookMetrics"}
      },
      "additionalProperties": true
    },
    "PlaybookEntry": {
      "type": "object",
      "required": ["id", "kind", "text"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "kind": {"enum": ["strategy", "learning", "rule", "warning", "note"]},
        "title": {"type": "string"},
        "text": {"type": "string", "minLength": 1},
        "tags": {"type": "array", "items": {"type": "string"}},
        "evidence": {"type": "array", "items": {"type": "string"}},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "helpfulCount": {"type": "integer", "minimum": 0},
        "harmfulCount": {"type": "integer", "minimum": 0},
        "feedbackType": {"enum": ["humanReview", "executionOutcome", "selfReport", "unknown"]},
        "createdAt": {"$ref": "./vagenda-core.schema.json#/$defs/dateTime"},
        "updatedAt": {"$ref": "./vagenda-core.schema.json#/$defs/dateTime"},
        "status": {"enum": ["active", "deprecated", "quarantined"]},
        "deprecatedReason": {"type": "string"},
        "supersedes": {"type": "array", "items": {"type": "string"}},
        "supersededBy": {"type": "string"},
        "duplicateOf": {"type": "string"},
        "metadata": {"type": "object"}
      },
      "additionalProperties": true
    },
    "PlaybookMetrics": {
      "type": "object",
      "required": ["totalEntries"],
      "properties": {
        "totalEntries": {"type": "integer", "minimum": 0},
        "averageConfidence": {"type": "number", "minimum": 0, "maximum": 1},
        "lastUpdated": {"$ref": "./vagenda-core.schema.json#/$defs/dateTime"}
      },
      "additionalProperties": true
    },
    "PlaybookPatch": {
      "type": "object",
      "required": ["operations"],
      "properties": {
        "playbookId": {"type": "string"},
        "baseDocumentSequence": {"type": "integer", "minimum": 0},
        "operations": {
          "type": "array",
          "items": {"$ref": "#/$defs/PlaybookPatchOp"}
        }
      },
      "additionalProperties": true
    },
    "PlaybookPatchOp": {
      "type": "object",
      "required": ["op"],
      "properties": {
        "op": {"enum": ["appendEntry", "updateEntry", "incrementCounter", "deprecateEntry"]},
        "entryId": {"type": "string"},
        "entry": {"$ref": "#/$defs/PlaybookEntry"},
        "delta": {
          "type": "object",
          "properties": {
            "helpfulCount": {"type": "integer"},
            "harmfulCount": {"type": "integer"}
          },
          "additionalProperties": false
        },
        "reason": {"type": "string"}
      },
      "additionalProperties": true,
      "allOf": [
        {
          "if": {"properties": {"op": {"const": "appendEntry"}}},
          "then": {"required": ["entry"]}
        },
        {
          "if": {"properties": {"op": {"const": "updateEntry"}}},
          "then": {"required": ["entryId", "entry"]}
        },
        {
          "if": {"properties": {"op": {"const": "incrementCounter"}}},
          "then": {"required": ["entryId", "delta"]}
        },
        {
          "if": {"properties": {"op": {"const": "deprecateEntry"}}},
          "then": {"required": ["entryId"]}
        }
      ]
    }
  }
}
